<Window x:Class="WpfApp2.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Profilom és Foglalásaim" Height="500" Width="700"
        WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBlock Name="UserStatsText" Margin="0,40,0,0" FontSize="14" />

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Foglalásaim" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="UserInfoText" Text="Felhasználó: " HorizontalAlignment="Center" Margin="0,5,0,0"/>
        </StackPanel>

        <ListView x:Name="BookingList" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5" Width="600">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding DisplayInfo}" VerticalAlignment="Center" FontSize="14" TextWrapping="Wrap"/>
                        <Button Grid.Column="1" Content="Törlés" Tag="{Binding Id}" Margin="10,0,0,0" Padding="10,5" Background="#DC3545" Foreground="White" Click="DeleteBookingButton_Click"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>