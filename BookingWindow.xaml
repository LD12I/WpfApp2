<Window x:Class="WpfApp2.BookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Helyfoglalás" Height="450" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="MovieTitleText" FontWeight="Bold" FontSize="22" Text="Film Címe" HorizontalAlignment="Center" Foreground="#E50914"/>
            <TextBlock x:Name="ScreeningTimeText" FontSize="16" Text="Vetítés időpontja" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            <TextBlock x:Name="RoomText" FontSize="14" Text="Terem" HorizontalAlignment="Center" FontStyle="Italic"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="10">
            <ScrollViewer>
                <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" Text="Film leírása..."/>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" Margin="0,15,0,0">
            <TextBlock Text="Adja meg a lefoglalni kívánt széket (pl. A5, C1-C2):" Margin="0,0,0,5"/>
            <TextBox x:Name="SeatInput" Padding="5" FontSize="14"/>
            <Button x:Name="ConfirmBookingButton" Content="Hely lefoglalása" Margin="0,10,0,0" Padding="10,5" FontSize="16" FontWeight="Bold" Background="#28A745" Foreground="White" Click="ConfirmBookingButton_Click"/>
        </StackPanel>
    </Grid>
</Window>